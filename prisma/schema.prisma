model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt()
  role         Role?          @relation(fields: [role_id], references: [id])
  role_id      String?
  user_role    UserRole[]
  organization Organization[]

  @@map("users")
}

model Organization {
  id       String @id @default(uuid())
  name     String
  slug     String @unique
  owner_id String @unique

  churches Church[]

  User User @relation(fields: [owner_id], references: [id])

  @@map("organizations")
}

model Role {
  id        String     @id @default(uuid())
  name      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  UserRole  UserRole[]
  User      User[]

  @@map("roles")
}

//muitos usuarios podem ter muitos cargos
model UserRole {
  user_id String
  role_id String
  User    User   @relation(fields: [user_id], references: [id])
  Role    Role   @relation(fields: [role_id], references: [id])

  @@id([user_id, role_id])
  @@map("users_roles")
}

model Church {
  id             String   @id @default(uuid())
  name           String   @unique
  userId         String   @unique
  members        Member[]
  organizationId String?

  Organization Organization? @relation(fields: [organizationId], references: [id])

  @@map("churchs")
}

model Member {
  id          String @id @default(uuid())
  fullName    String
  phone       String @unique
  street      String
  houseNumber String
  postalCode  String
  churchId    String
  officeId    String
  church      Church @relation(fields: [churchId], references: [id])
  office      Office @relation(fields: [officeId], references: [id])

  @@map("members")
}

model Office {
  id      String   @id @default(uuid())
  name    String   @unique
  members Member[]

  @@map("offices")
}
