generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
  output   = "../ERD.png"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
  SHEPHERD
  SECRETARY
  FINANCE
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  atavarUrl String?
  createdAt DateTime @default(now())
  Church    Church?

  @@map("users")
}

model Church {
  id         String   @id @default(uuid())
  name       String   @unique
  shepherdId String   @unique
  members    Member[]
  user       User     @relation(fields: [shepherdId], references: [id])

  @@map("churchs")
}

model Member {
  id          String       @id @default(uuid())
  fullName    String
  phone       String       @unique
  churchId    String
  street      String
  houseNumber String
  postalCode  String
  officeId    String
  church      Church       @relation(fields: [churchId], references: [id])
  office      Office       @relation(fields: [officeId], references: [id])
  Attendance  Attendance[]

  @@map("members")
}

model Office {
  id      String   @id @default(uuid())
  name    String   @unique
  members Member[]

  @@map("offices")
}

model Event {
  id          String       @id @default(uuid())
  name        String
  date        DateTime
  attendances Attendance[]

  @@map("events")
}

model Attendance {
  id               String @id @default(uuid())
  memberId         String
  eventId          String
  member           Member @relation(fields: [memberId], references: [id])
  event            Event  @relation(fields: [eventId], references: [id])
  attendanceStatus String

  @@map("attendances")
}
