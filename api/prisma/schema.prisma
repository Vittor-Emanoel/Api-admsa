model Churchs {
  id       String    @id @default(uuid())
  name     String    @unique
  shepherd String
  Members  Members[]

  @@map("churchs")
}

model Members {
  id    String @id @default(uuid())
  name  String
  phone String @unique

  church   Churchs @relation(fields: [churchId], references: [id])
  churchId String

  street     String
  city       String
  state      String
  postalCode String

  @@map("members")
}
